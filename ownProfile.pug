doctype html
html(lang='en')

html
    head
        title Your Profile
        style
            include .\styles\ownProfile.css
body
    include .\header
    div#main
        h1 Username: #{user.name}
    div#userType
        input(type='radio', name='regular', value='1')#wnr1
        label(for='regular')
        span.
            Regular 
        br
        input(type='radio', name='contributing', value='2')#wnr2
        label(for='contributing')
        span.
            Contributing
        br
        button(onclick='updateUser()') Save
        br
        br

    div#followingPeople
        h2 People you follow: 
        each person in user.followingActors 
            br
            button(name = 'person1',onclick='unfollow(person)') Unfollow
            a(href='/person/'+person)  #{person}
            br

    div#followingUser
        h2 Users you follow: 
    
        each userID in user.following
            br
            button(name = 'userID',onclick='unfollow(userID)') Unfollow
            a(href='/profile/'+userID) #{userID}
            br

    div#WatchList
        h3 Watch List: 
        each movie in user.watchlist
            br 
            button(name = 'movie',onclick='removeWatchList(movie)') Remove
            a(href='/movie/'+movie) #{movie}
            br
    div#Recommends 
        h4 Recommended Movies: 
        each movie in user.watchlist
            br 
            button(name = 'movie',onclick='removeWatchList(movie)') Remove
            a(href='/movie/'+movie) #{movie}
            br
        
    div#notifications 
        h5 Notification Center: 
        button(name = 'movie1',onclick='removeElement(elementID)') Delete
